    <!-- CHART CONFIGURATION SCRIPTS -->
    <script>
        // Utility: Label Wrapping
        function wrapLabel(label, maxLength = 16) {
            if (label.length <= maxLength) return label;
            const words = label.split(' ');
            const lines = [];
            let currentLine = words[0];

            for (let i = 1; i < words.length; i++) {
                if ((currentLine + " " + words[i]).length <= maxLength) {
                    currentLine += " " + words[i];
                } else {
                    lines.push(currentLine);
                    currentLine = words[i];
                }
            }
            lines.push(currentLine);
            return lines;
        }

        // Shared Tooltip Config
        const commonTooltip = {
            callbacks: {
                title: function(tooltipItems) {
                    const item = tooltipItems[0];
                    let label = item.chart.data.labels[item.dataIndex];
                    if (Array.isArray(label)) {
                        return label.join(' ');
                    } else {
                        return label;
                    }
                }
            }
        };

        // Chart 1: Verification Gap (Bar Chart)
        const ctxGap = document.getElementById('verificationGapChart').getContext('2d');
        new Chart(ctxGap, {
            type: 'bar',
            data: {
                labels: ['Manual Fact Check', 'INFAKT AI Analysis'],
                datasets: [{
                    label: 'Time Required (Minutes)',
                    data: [180, 2], // 3 hours vs 2 minutes
                    backgroundColor: ['#94a3b8', '#6366f1'],
                    borderRadius: 8,
                    barThickness: 40,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: commonTooltip
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        title: { display: true, text: 'Minutes' },
                        grid: { display: false }
                    },
                    x: {
                        grid: { display: false }
                    }
                }
            }
        });

        // Chart 2: Discourse Analysis (Stacked Bar)
        const ctxDiscourse = document.getElementById('discourseChart').getContext('2d');
        new Chart(ctxDiscourse, {
            type: 'bar',
            data: {
                labels: ['Positive Sentiment', 'Negative Sentiment', 'Polarized/Aggressive'],
                datasets: [
                    {
                        label: 'Organic Users',
                        data: [65, 40, 20],
                        backgroundColor: '#10b981', // Emerald
                        borderRadius: 4,
                        stack: 'Stack 0',
                    },
                    {
                        label: 'Suspected Bots',
                        data: [15, 30, 60], // Bots driving polarization
                        backgroundColor: '#ef4444', // Red
                        borderRadius: 4,
                        stack: 'Stack 0',
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    tooltip: commonTooltip,
                    legend: { position: 'bottom' }
                },
                scales: {
                    x: {
                        stacked: true,
                        grid: { display: false }
                    },
                    y: {
                        stacked: true,
                        grid: { color: '#f1f5f9' }
                    }
                }
            }
        });

        // Chart 3: Trust Gauge (Doughnut)
        const ctxGauge = document.getElementById('trustGauge').getContext('2d');
        new Chart(ctxGauge, {
            type: 'doughnut',
            data: {
                labels: ['Credibility Score', 'Gap'],
                datasets: [{
                    data: [8.5, 1.5],
                    backgroundColor: ['#10b981', '#f1f5f9'],
                    borderWidth: 0,
                    cutout: '85%', // Thin ring
                    circumference: 360,
                    rotation: 0,
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { display: false },
                    tooltip: { enabled: false } // Custom overlay used instead
                }
            }
        });

        // Chart 4: Competitive Radar
        const ctxRadar = document.getElementById('comparisonRadar').getContext('2d');
        new Chart(ctxRadar, {
            type: 'radar',
            data: {
                labels: wrapLabel([
                    'Processing Speed', 
                    'Context Awareness (Video)', 
                    'Web Grounding (Search)', 
                    'Sentiment Analysis', 
                    'Fallacy Detection'
                ].join(', ')), // Use wrapper logic for array
                datasets: [
                    {
                        label: 'INFAKT',
                        data: [95, 100, 95, 100, 90],
                        fill: true,
                        backgroundColor: 'rgba(99, 102, 241, 0.2)', // Primary 500 alpha
                        borderColor: '#6366f1',
                        pointBackgroundColor: '#6366f1',
                        pointBorderColor: '#fff',
                        pointHoverBackgroundColor: '#fff',
                        pointHoverBorderColor: '#6366f1'
                    },
                    {
                        label: 'Standard Fact Checkers',
                        data: [20, 90, 80, 10, 80],
                        fill: true,
                        backgroundColor: 'rgba(148, 163, 184, 0.2)', // Slate
                        borderColor: '#94a3b8',
                        pointBackgroundColor: '#94a3b8',
                        pointBorderColor: '#fff'
                    },
                    {
                        label: 'General AI (ChatGPT)',
                        data: [90, 40, 60, 50, 40],
                        fill: true,
                        backgroundColor: 'rgba(245, 158, 11, 0.2)', // Amber
                        borderColor: '#f59e0b',
                        pointBackgroundColor: '#f59e0b',
                        pointBorderColor: '#fff'
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: { position: 'bottom' },
                    tooltip: commonTooltip
                },
                scales: {
                    r: {
                        angleLines: { color: '#e2e8f0' },
                        grid: { color: '#e2e8f0' },
                        pointLabels: {
                            font: { size: 12, family: "'Plus Jakarta Sans'" },
                            color: '#64748b'
                        },
                        ticks: { display: false } // Hide numbers on axis
                    }
                }
            }
        });
    </script>
